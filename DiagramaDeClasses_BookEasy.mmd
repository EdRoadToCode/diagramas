classDiagram
    class Membro {
        +String idMembro
        +String nome
        +String email
        +verificarPendencias()
        +listarEmprestimos()
    }

    class Livro {
        +String isbn
        +String titulo
        +String autor
        +boolean disponivel
        +verificarDisponibilidade()
        +atualizarStatus()
    }

    class Emprestimo {
        +String idEmprestimo
        +Date dataEmprestimo
        +Date dataDevolucao
        +calcularAtraso()
    }

    class Administrador {
        +String idAdmin
        +String nome
        +String email
        +cadastrarLivro()
        +cadastrarMembro()
        +gerarRelatorioPopularidade()
    }

    class Notificacao {
        +String idNotificacao
        +String mensagem
        +enviarNotificacao()
    }

    class Sistema {
        +login(usuario, senha)
        +logout()
        +gerarRelatorios()
    }

